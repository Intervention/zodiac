{
    "name": "intervention/zodiac",
    "description": "Zodiac Sign Calculator",
    "homepage": "https://zodiac.intervention.io",
    "keywords": [
        "zodiac",
        "sun sign",
        "star sign",
        "horoscope",
        "astrology",
        "birthday"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Oliver Vogel",
            "email": "oliver@intervention.io",
            "homepage": "https://intervention.io"
        }
    ],
    "require": {
        "php": "^8.2",
        "nesbot/carbon": "^2.0 || ^3.0",
        "illuminate/translation": "^11 || ^12"
    },
    "require-dev": {
        "phpunit/phpunit": "^11.0 || ^12.0",
        "phpstan/phpstan": "^2",
        "squizlabs/php_codesniffer": "^3.8",
        "slevomat/coding-standard": "~8.0"
    },
    "autoload": {
        "psr-4": {
            "Intervention\\Zodiac\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Intervention\\Zodiac\\Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Intervention\\Zodiac\\Laravel\\ServiceProvider"
            ],
            "aliases": {
                "Zodiac": "Intervention\\Zodiac\\Laravel\\Facades\\Zodiac"
            }
        }
    },
    "minimum-stability": "stable",
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}
